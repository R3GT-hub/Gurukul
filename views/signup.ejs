<!DOCTYPE html>
<html lang="en">
<head>
    <title>Signup</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Exo+2:ital,wght@0,100..900;1,100..900&family=Montserrat:wght@300;400;800&family=Playpen+Sans:wght@300&family=Poppins:wght@500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Exo+2:ital,wght@0,100..900;1,100..900&family=Madimi+One&family=Montserrat:wght@300;400;800&family=Playpen+Sans:wght@300&family=Poppins:wght@500&display=swap" rel="stylesheet">
        
    <style>
        /* Custom styles */
        body {
            font-family: 'Madimi One', sans-serif;
            background-color: #f8f9fa;
        }
        * {
            box-sizing: border-box;
        }
        .signup-container {
          width: 100%;
         
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .form-container {
            width: 60%;
            padding: 20px;
            height: 50%;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
        .form-label {
            font-weight: bold;
        }
        .form-control {
            border-radius: 5px;
        }
        .btn-primary {
            border-radius: 5px;
            width: 100%;
        }
    </style>
</head>
<body>

<%-include('./partials/nav')%> 
<div class="container signup-container" style="display: flex;flex-wrap: wrap; flex-direction: row; background-image: url('/uploads/background.png'); background-repeat: no-repeat;
background-size: cover; ">

    <div class="form-container">
        <form action="/user/signup" method="post" onsubmit="return validateForm()">
            <div class="mb-3">
                <label for="fullName" class="form-label">Full Name</label>
                <input type="text" class="form-control" id="fullName" name="fullName" aria-describedby="emailHelp" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control" id="email" aria-describedby="emailHelp"  name="email" required>
                <div id="emailError" class="form-text text-danger"></div> <!-- Error message placeholder -->
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password"  name="password" required>
            </div>
            <button type="submit" class="btn btn-primary">SignUp</button>
        </form>
    </div>
</div>

<script>
function validateForm() {
    var email = document.getElementById("email").value;
    var emailError = document.getElementById("emailError");
    var emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/; // Regex pattern for basic email validation

    if (!emailPattern.test(email)) {
        emailError.innerHTML = "Please enter a valid email address";
        return false; // Prevent form submission if email is invalid
    } else {
        emailError.innerHTML = ""; // Clear error message if email is valid
        var domain = email.split('@')[1];
        if (domain !== 'gmail.com' && domain !== 'zohomail.com' && domain !== 'yahoo.com' && domain !== 'rediffmail.com') {
            emailError.innerHTML = "Sorry, we do not accept emails from this email service"; // Display error message for specific domain
            return false; // Prevent form submission if email domain is invalid
        }
    }
    return true; // Allow form submission if email is valid
}
</script>

</body>
</html>
