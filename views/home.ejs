      /* Custom styles */
      body {
        font-family: "Madimi One";
      }
      .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease-in-out;
        display: flex; /* Use flexbox */
        flex-direction: column; /* Align items vertically */
        height: 100%; /* Ensure cards take full height of their container */
      }

      .card:hover {
        transform: translateY(-5px);
      }

      .card-img-top {
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
        /* object-fit: cover; */
        height: 200px; /* Adjusted height for the images */
        width: 100%; /* Ensure the image takes the full width of the card */
      }

      .card-title {
        font-weight: bold;
        font-size: 1.2rem;
        margin-bottom: 10px; /* Add some margin below the title */
      }

      .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between; /* Space out content vertically */
        flex-grow: 1; /* Allow body to grow within the card */
      }

      .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.3s ease-in-out;
      }

      .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
      }
      .btnbanner {
        padding: 10px;
        /* background-color: #7250af; */
        background-color: #007bff;
        color: white;
        margin: 20px;
        border-radius: 10px;
        border: none;
      }
      .btnbanner:hover {
        color: #007bff;
        background-color: white;
        border: 1px solid #007bff;
      }
